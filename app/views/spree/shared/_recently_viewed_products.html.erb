<% if get_recently_viewed_products.any? %>
  <div class="ws-contentbox clearfix">
    <div id="recently_viewed" class="recently_viewed_products product-carousel" data-hook>
      <h3 class="product-section-title"><%= Spree.t(:recently_viewed_products) %></h3>
        <div class="product-carousel-frame">
            <% get_recently_viewed_products.each do |p| %>
              <div>
                <%= link_to "#{slider_image(p, alt: p.name,)} #{p.name}<br>
                            <strong>#{display_price_per(product_or_variant: p)}</strong>".html_safe,
                            p,
                            title: p.name,
                            class: 'slide-product'
                %>
              </div>
            <% end -%>
        </div>
      <a class="prev glyphicon glyphicon-chevron-left"></a>
      <a class="next glyphicon glyphicon-chevron-right"></a>
    </div>
  </div>
<% end %>
